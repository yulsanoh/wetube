extends base.pug

block content 
  img(src="/" + user.avatarUrl, alt="", width="100", height="100")
  form(method="POST", enctype="multipart/form-data").edit-profile__form
    label(id="avatar") Avatar
    input(type="file", for="avatar", name="avatar", accept="image/*")
    input(name="username", required, type="text" placeholder="Username", value=user.username)
    input(name="email", required, type="email" placeholder="Email", value=user.email)
    input(name="name", required, type="text" placeholder="Name", value=user.name)
    input(name="location", required, type="text" placeholder="Location", value=user.location)
    input(type="submit", value="Edit Profile") 
    if (!user.socialOnly)
      hr
      div.edit-profile__password
        a(href="change-password") Change Password &rarr;