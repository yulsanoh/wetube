extends base.pug

block content
    if (errorMessage)
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") 비디오 파일
        input(type="file", accept="video/*", required, id="video", name="video") 
        label(for="thumbnail") 영상 썸네일 
        input(type="file", accept="image/*", required, id="thumbnail", name="thumbnail") 
        input(placeholder="제목", required, type="text", name="title", maxLength=80)
        input(placeholder="영상에 대한 설명", required, type="text", name="description" minLength=4)
        input(placeholder="해쉬태그, 콤마(,)로 구분해주세요", required, type="text", name="hashtags")
        input(type="submit", value="영상 업로드").btn__upload